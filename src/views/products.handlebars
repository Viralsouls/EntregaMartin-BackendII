<h1>Lista de productos</h1>
<ul>
  {{#each products}}
    <li>
      <strong>{{this.title}}</strong> - ${{this.price}}
      <form method="POST" action="/api/carts/{{../cartId}}/products/{{this._id}}">
        <button type="submit">Agregar al carrito</button>
      </form>
    </li>
  {{/each}}
</ul>